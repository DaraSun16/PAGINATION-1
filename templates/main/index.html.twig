{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h2 class="my-5">{{ articles.getTotalItemCount }} articles en ligne</h2>
			</div>

			{% for item in articles %}

				<div class="col-6 col-md-4 col-lg-3 col-xl-2">
					<div class="card">
						<img src="https://img.freepik.com/photos-gratuite/gros-plan-ara-ecarlate-partir-vue-cote-tete-agrandi_488145-3540.jpg?semt=ais_hybrid&w=740" class="card-img-top" alt="Hello World">
						<div class="card-body">
							<h5 class="card-title">{{ item.title }}</h5>
							<p class="card-text">{{ item.author }}</p>
						</div>
					</div>
				</div>

			{% endfor %}

			<div class="navigation">
				{{ knp_pagination_render(articles) }}
			</div>

		</div>
	</div>
{% endblock %}
